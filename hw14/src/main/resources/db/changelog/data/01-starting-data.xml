<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="data-1" author="esilaeva">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">SELECT COUNT(*) FROM authors</sqlCheck>
        </preConditions>
        <insert tableName="authors">
            <column name="id" value="1"/>
            <column name="full_name">Author_1</column>
        </insert>
        <insert tableName="authors">
            <column name="id" value="2"/>
            <column name="full_name">Author_2</column>
        </insert>
        <insert tableName="authors">
            <column name="id" value="3"/>
            <column name="full_name">Author_3</column>
        </insert>
        <rollback>
            <delete tableName="authors">
                <where>id IN (1,2,3)</where>
            </delete>
        </rollback>
    </changeSet>

    <changeSet id="data-2" author="esilaeva">
